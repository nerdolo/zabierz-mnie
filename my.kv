    SelectTypeScreen:

<StartScreen>:
    name: "start"

    BoxLayout:
        orientation: 'vertical'
        Button:
            text: "Zabierz mnie stÄ…d"
            on_release:
                app.root.current = "selecttype"
                root.manager.transition.direction = "left"


<SelectTypeScreen>:
    name: "selecttype"

    BoxLayout:
        orientation: 'vertical'
        Button:
            text: "Poza dachem"
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"
